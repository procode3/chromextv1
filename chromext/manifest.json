{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "Record your screen in Chrome",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "desktopCapture",
        "storage",
        "activeTab",
        "identity"
    ],
    "host_permissions": [
        "https://www.google.com/"
    ]
}